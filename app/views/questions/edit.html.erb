<%= render 'shared/icons' %>

<div class="container-fluid py-4">
  <div class="row justify-content-center">
    <div class="col-xl-8 col-lg-10">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-4 border-bottom">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <%= icon('pencil', size: 'xl', css_class: 'text-primary') %>
            </div>
            <div class="flex-grow-1 ms-3">
              <h1 class="h4 mb-1 text-gray-800">Edytuj pytanie</h1>
              <p class="text-muted mb-0">Quiz: <%= @quiz.title %></p>
            </div>
          </div>
        </div>
        
        <div class="card-body p-4">
          <%= form_with model: [@classroom, @quiz, @question], local: true, class: "needs-validation", novalidate: true do |form| %>
            <% if @question.errors.any? %>
              <div class="alert alert-danger d-flex align-items-start mb-4">
                <%= icon('exclamation-triangle', size: 'lg', css_class: 'me-3 mt-1 flex-shrink-0 text-danger') %>
                <div class="flex-grow-1">
                  <h5 class="alert-heading">
                    <%= pluralize(@question.errors.count, "błąd") %> uniemożliwia zapisanie pytania:
                  </h5>
                  <ul class="mb-0">
                    <% @question.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            <% end %>

            <div class="mb-4">
              <%= form.label :content, class: "form-label fw-medium text-gray-700" do %>
                <%= icon_with_text('chat-alt', 'Treść pytania', size: 'sm') %>
              <% end %>
              <%= form.text_area :content, 
                  class: "form-control form-control-lg", 
                  rows: 4,
                  placeholder: "Wprowadź treść pytania...",
                  required: true %>
              <div class="form-text text-muted">
                Sformułuj pytanie w sposób jasny i zrozumiały dla uczniów
              </div>
            </div>

            <div class="mb-4">
              <%= form.label :question_type, class: "form-label fw-medium text-gray-700" do %>
                <%= icon_with_text('collection', 'Typ pytania', size: 'sm') %>
              <% end %>
              <%= form.select :question_type, 
                            [['Wielokrotny wybór', 'multiple_choice'], ['Otwarte', 'open_ended']], 
                            {}, 
                            class: "form-select form-select-lg",
                            disabled: @question.persisted? %>
              <% if @question.persisted? %>
                <div class="form-text text-warning d-flex align-items-center mt-2">
                  <%= icon('lock-closed', size: 'sm', css_class: 'me-2') %>
                  Nie można zmienić typu pytania po jego utworzeniu
                </div>
              <% else %>
                <div class="form-text text-muted">
                  Wybierz typ pytania - nie można go zmienić po utworzeniu
                </div>
              <% end %>
            </div>

            <!-- Sekcja odpowiedzi - tylko dla multiple choice -->
            <% if @question.multiple_choice? %>
              <div class="border-top pt-4 mt-4">
                <h5 class="text-gray-700 mb-3 d-flex align-items-center">
                  <%= icon('check-circle', size: 'sm', css_class: 'me-2 text-success') %>
                  Odpowiedzi (wielokrotny wybór)
                </h5>
                
                <div class="alert alert-warning d-flex align-items-start mb-4">
                  <%= icon('information-circle', size: 'lg', css_class: 'me-3 mt-1 flex-shrink-0 text-warning') %>
                  <div class="flex-grow-1">
                    <small class="fw-medium">Wymagania dotyczące odpowiedzi:</small>
                    <ul class="small mb-0 mt-1">
                      <li>Pytanie musi mieć <strong class="text-danger">przynajmniej jedną poprawną odpowiedź</strong></li>
                      <li>Musi być <strong class="text-danger">co najmniej dwie odpowiedzi</strong> w sumie</li>
                      <li>Puste odpowiedzi będą ignorowane przy zapisie</li>
                    </ul>
                  </div>
                </div>
                
                <%= form.fields_for :answers do |answer_form| %>
                  <div class="card border mb-3">
                    <div class="card-body">
                      <div class="row align-items-center g-3">
                        <div class="col-auto">
                          <div class="form-check">
                            <%= answer_form.check_box :correct, class: "form-check-input answer-correct-checkbox" %>
                            <%= answer_form.label :correct, class: "form-check-label small fw-medium text-success" do %>
                              <%= icon('check', size: 'xs', css_class: 'me-1') %>
                              Poprawna
                            <% end %>
                          </div>
                        </div>
                        <div class="col">
                          <%= answer_form.text_field :content, 
                                class: "form-control", 
                                placeholder: "Wprowadź treść odpowiedzi..." %>
                          <%= answer_form.hidden_field :id if answer_form.object.persisted? %>
                        </div>
                        <div class="col-auto">
                          <% if answer_form.object.persisted? %>
                            <div class="form-check">
                              <%= answer_form.check_box :_destroy, class: "form-check-input answer-destroy-checkbox" %>
                              <%= answer_form.label :_destroy, class: "form-check-label small text-danger" do %>
                                <%= icon('trash', size: 'xs', css_class: 'me-1') %>
                                Usuń
                              <% end %>
                            </div>
                          <% else %>
                            <span class="badge bg-primary-subtle text-primary small">
                              <%= icon('plus', size: 'xs', css_class: 'me-1') %>
                              Nowa
                            </span>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>

                <div class="alert alert-info d-flex align-items-center">
                  <%= icon('lightbulb', size: 'lg', css_class: 'me-3 flex-shrink-0 text-info') %>
                  <div class="flex-grow-1">
                    <small>
                      <strong>Tip:</strong> Aby dodać więcej odpowiedzi, zapisz pytanie - 
                      automatycznie pojawi się nowe puste pole do wypełnienia.
                    </small>
                  </div>
                </div>
              </div>
            <% else %>
              <div class="border-top pt-4 mt-4">
                <div class="alert alert-warning d-flex align-items-center">
                  <%= icon('pencil', size: 'lg', css_class: 'me-3 flex-shrink-0 text-warning') %>
                  <div class="flex-grow-1">
                    <small>
                      <strong>Pytanie otwarte</strong> - uczeń wpisuje własną odpowiedź tekstową.
                      Nie ma zdefiniowanych wcześniej opcji odpowiedzi.
                    </small>
                  </div>
                </div>
              </div>
            <% end %>

            <div class="d-flex gap-3 mt-4 pt-4 border-top">
              <%= form.submit "Zapisz zmiany", 
                  class: "btn btn-primary btn-lg flex-fill d-flex align-items-center justify-content-center",
                  data: { disable_with: "Zapisywanie..." } %>
              
              <%= link_to classroom_quiz_path(@classroom, @quiz), 
                    class: "btn btn-outline-secondary flex-fill d-flex align-items-center justify-content-center" do %>
                <%= icon('arrow-left', size: 'sm', css_class: 'me-2') %>
                Anuluj
              <% end %>
              
              <%= link_to classroom_quiz_path(@classroom, @quiz, anchor: "question-#{@question.id}"), 
                    class: "btn btn-outline-info flex-fill d-flex align-items-center justify-content-center" do %>
                <%= icon('eye', size: 'sm', css_class: 'me-2') %>
                Podgląd
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Informacje o pytaniu -->
      <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-white py-3">
          <h6 class="mb-0 d-flex align-items-center">
            <%= icon('information-circle', size: 'sm', css_class: 'me-2 text-info') %>
            Informacje o pytaniu
          </h6>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <dl class="row small mb-0">
                <dt class="col-sm-5 text-gray-600">Utworzono:</dt>
                <dd class="col-sm-7"><%= @question.created_at.strftime("%d.%m.%Y %H:%M") %></dd>
                
                <dt class="col-sm-5 text-gray-600">Ostatnia aktualizacja:</dt>
                <dd class="col-sm-7"><%= @question.updated_at.strftime("%d.%m.%Y %H:%M") %></dd>
              </dl>
            </div>
            <div class="col-md-6">
              <dl class="row small mb-0">
                <dt class="col-sm-5 text-gray-600">Liczba odpowiedzi:</dt>
                <dd class="col-sm-7"><%= @question.answers.count %></dd>
                
                <dt class="col-sm-5 text-gray-600">Poprawne odpowiedzi:</dt>
                <dd class="col-sm-7">
                  <span class="badge bg-<%= @question.answers.where(correct: true).count > 0 ? 'success' : 'danger' %>-subtle text-<%= @question.answers.where(correct: true).count > 0 ? 'success' : 'danger' %>">
                    <%= @question.answers.where(correct: true).count %>
                  </span>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>