<%= render 'shared/icons' %>

<div class="container-fluid py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h3 mb-1 text-gray-800"><%= icon_with_text('email', 'Zarządzanie zaproszeniami') %></h1>
      <p class="text-muted">Lista wszystkich zaproszeń do systemu</p>
    </div>
    <% if policy(Invitation.new).new? %>
      <%= link_to new_admin_invitation_path, class: "btn btn-primary d-flex align-items-center" do %>
        <%= icon('plus', size: 'sm', css_class: 'me-2') %>
        Nowe zaproszenie
      <% end %>
    <% end %>
  </div>

  <div class="card shadow-sm border-0">
    <div class="card-header bg-white py-3">
      <h5 class="card-title mb-0 text-gray-700">
        <%= icon_with_text('email', 'Lista zaproszeń', size: 'sm') %>
      </h5>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th class="px-4 py-3 text-gray-600">Email</th>
              <th class="px-4 py-3 text-gray-600">Rola</th>
              <th class="px-4 py-3 text-gray-600">Status</th>
              <th class="px-4 py-3 text-gray-600">Wysłane przez</th>
              <th class="px-4 py-3 text-gray-600">Wygasa</th>
              <th class="px-4 py-3 text-gray-600 text-center">Akcje</th>
            </tr>
          </thead>
          <tbody>
            <% @invitations.each do |invitation| %>
              <tr class="align-middle">
                <td class="px-4 py-3">
                  <div class="d-flex align-items-center">
                    <%= icon('user-circle', css_class: 'text-gray-400 me-2') %>
                    <span class="fw-medium text-gray-800"><%= invitation.email %></span>
                  </div>
                </td>
                <td class="px-4 py-3">
                  <span class="badge rounded-pill bg-<%= invitation.teacher? ? 'success' : 'primary' %>-subtle text-<%= invitation.teacher? ? 'success' : 'primary' %> border border-<%= invitation.teacher? ? 'success' : 'primary' %>-subtle">
                    <%= invitation.role %>
                  </span>
                </td>
                <td class="px-4 py-3">
                  <span class="badge rounded-pill bg-<%= invitation_status_badge(invitation) %>-subtle text-<%= invitation_status_badge(invitation) %> border border-<%= invitation_status_badge(invitation) %>-subtle">
                    <%= icon(status_icon_name(invitation.status), size: 'sm', css_class: 'me-1') %>
                    <%= invitation.status %>
                  </span>
                </td>
                <td class="px-4 py-3 text-gray-600">
                  <%= invitation.invited_by.email %>
                </td>
                <td class="px-4 py-3">
                  <span class="text-gray-700 <%= 'text-warning' if invitation.expires_at < 1.day.from_now %>">
                    <%= invitation.expires_at.strftime("%d.%m.%Y") %>
                  </span>
                </td>
                <td class="px-4 py-3 text-center">
                  <% if policy(invitation).destroy? && invitation.pending? %>
                    <%= button_to admin_invitation_path(invitation), 
                          method: :delete, 
                          class: "btn btn-sm btn-outline-danger d-inline-flex align-items-center",
                          data: { confirm: "Na pewno chcesz anulować to zaproszenie?" } do %>
                      <%= icon('ban', size: 'sm', css_class: 'me-1') %>
                      Anuluj
                    <% end %>
                  <% else %>
                    <span class="text-muted">Brak akcji</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>