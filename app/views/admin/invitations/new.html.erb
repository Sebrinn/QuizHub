<!-- app/views/admin/invitations/new.html.erb -->
<%= render 'shared/icons' %>

<div class="container-fluid py-4">
  <div class="row justify-content-center">
    <div class="col-xl-5 col-lg-6 col-md-8">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-4 border-bottom">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <%= icon('email', size: 'xl', css_class: 'text-primary') %>
            </div>
            <div class="flex-grow-1 ms-3">
              <h1 class="h4 mb-1 text-gray-800">Wyślij zaproszenie</h1>
              <p class="text-muted mb-0">Dodaj nowego użytkownika do platformy</p>
            </div>
          </div>
        </div>
        
        <div class="card-body p-4">
          <%= form_with model: [:admin, @invitation], data: { turbo: false }, class: "needs-validation", novalidate: true do |f| %>
            <div class="mb-4">
              <%= f.label :email, class: "form-label fw-medium text-gray-700" do %>
                <%= icon_with_text('email', 'Adres email', size: 'sm') %>
              <% end %>
              <%= f.email_field :email, 
                  class: "form-control form-control-lg", 
                  placeholder: "wpisz@email.com",
                  required: true,
                  autofocus: true %>
              <div class="form-text text-muted">
                Na ten adres zostanie wysłane zaproszenie do rejestracji
              </div>
            </div>
            
            <div class="mb-4">
              <%= f.label :role, class: "form-label fw-medium text-gray-700" do %>
                <%= icon_with_text('user-tag', 'Rola użytkownika', size: 'sm') %>
              <% end %>
              <%= f.select :role, 
                  options_for_select([
                    ["Nauczyciel", "teacher"], 
                    ["Uczeń", "student"]
                  ], "teacher"), 
                  {}, 
                  class: "form-select form-select-lg" %>
              <div class="form-text text-muted">
                Nauczyciel może tworzyć kursy, uczeń ma dostęp do materiałów
              </div>
            </div>

            <div class="mt-4 pt-3 border-top">
              <div class="d-flex gap-3">
                <%= link_to admin_invitations_path, class: "btn btn-outline-secondary flex-fill d-flex align-items-center justify-content-center" do %>
                  <%= icon('arrow-left', size: 'sm', css_class: 'me-2') %>
                  Powrót do listy
                <% end %>
                <%= f.submit "Wyślij zaproszenie", 
                    class: "btn btn-primary btn-lg flex-fill d-flex align-items-center justify-content-center",
                    data: { disable_with: "Wysyłanie..." } %>
              </div>
            </div>
          <% end %>
        </div>
        
        <div class="card-footer bg-light py-3 border-top">
          <div class="text-center">
            <small class="text-muted">
              <%= icon('info-circle', size: 'sm', css_class: 'me-1') %>
              Zaproszenie będzie ważne przez 7 dni
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>