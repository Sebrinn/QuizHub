<!-- app/views/admin/invitations/new.html.erb -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-header bg-success text-white text-center">
          <h4 class="mb-0">Wyślij zaproszenie</h4>
        </div>
        <div class="card-body p-4">
          <%= form_with model: [:admin, @invitation], data: { turbo: false } do |f| %>
            <div class="mb-3">
              <%= f.label :email, "Email", class: "form-label" %>
              <%= f.email_field :email, class: "form-control", required: true %>
            </div>
            
            <div class="mb-3">
              <%= f.label :role, "Rola", class: "form-label" %>
              <%= f.select :role, 
                  options_for_select([["Nauczyciel", "teacher"], ["Uczeń", "student"]], "teacher"), 
                  {}, class: "form-select" %>
            </div>
            
            <div class="d-grid">
              <%= f.submit "Wyślij zaproszenie", class: "btn btn-success btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>