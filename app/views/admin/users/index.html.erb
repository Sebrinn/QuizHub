<!-- app/views/admin/users/index.html.erb -->
<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Użytkownicy</h2>
  </div>

  <div class="card">
    <div class="card-body">
      <table class="table">
        <thead>
          <tr>
            <th>Email</th>
            <th>Imię i nazwisko</th>
            <th>Rola</th>
            <th>Data rejestracji</th>
            <th>Akcje</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.email %></td>
              <td><%= user.full_name %></td>
              <td>
                <span class="badge bg-<%= user_badge_color(user.role) %>">
                  <%= user.role %>
                </span>
              </td>
              <td><%= user.created_at.strftime("%d.%m.%Y") %></td>
              <td>
                <% if user.student? && policy(user).promote_to_teacher? %>
                  <%= button_to "Awansuj na nauczyciela", 
                        promote_to_teacher_admin_user_path(user), 
                        class: "btn btn-sm btn-success",
                        data: { confirm: "Na pewno awansować #{user.email} na nauczyciela?" } %>
                <% elsif user.teacher? && policy(user).demote_to_student? %>
                  <%= button_to "Zmien na ucznia", 
                        demote_to_student_admin_user_path(user),
                        class: "btn btn-sm btn-warning",
                        data: { confirm: "Na pewno zmienić #{user.email} na ucznia?" } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>