<%= render 'shared/icons' %>

<div class="container-fluid py-4">
  <div class="row justify-content-center">
    <div class="col-xl-5 col-lg-6 col-md-8">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-4 border-bottom">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <%= icon('login', size: 'xl', css_class: 'text-primary') %>
            </div>
            <div class="flex-grow-1 ms-3">
              <h1 class="h4 mb-1 text-gray-800">Logowanie do konta</h1>
              <p class="text-muted mb-0">Witaj z powrotem! Zaloguj się do swojego konta</p>
            </div>
          </div>
        </div>
        
        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }, novalidate: true) do |f| %>
            <div class="mb-4">
              <%= f.label :email, class: "form-label fw-medium text-gray-700" do %>
                <%= icon_with_text('at', 'Adres email', size: 'sm') %>
              <% end %>
              <%= f.email_field :email, 
                  autofocus: true, 
                  autocomplete: "email", 
                  class: "form-control form-control-lg", 
                  placeholder: "twoj@email.com",
                  required: true %>
              <div class="form-text text-muted">
                Wpisz adres email użyty podczas rejestracji
              </div>
            </div>

            <div class="mb-4">
              <%= f.label :password, class: "form-label fw-medium text-gray-700" do %>
                <%= icon_with_text('lock', 'Hasło', size: 'sm') %>
              <% end %>
              <%= f.password_field :password, 
                  autocomplete: "current-password", 
                  class: "form-control form-control-lg", 
                  placeholder: "Twoje hasło",
                  required: true %>
              <div class="form-text text-muted">
                <%= link_to "Zapomniałeś hasła?", new_password_path(resource_name), class: "text-decoration-none" %>
              </div>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-4">
                <div class="form-check">
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <%= f.label :remember_me, class: "form-check-label text-gray-700 d-flex align-items-center" do %>
                    <%= icon('check-circle', size: 'sm', css_class: 'me-2 text-primary') %>
                    Zapamiętaj mnie na tym urządzeniu
                  <% end %>
                </div>
                <div class="form-text text-muted">
                  Nie zalecane na urządzeniach publicznych
                </div>
              </div>
            <% end %>

            <div class="d-grid mt-4 pt-3 border-top">
              <%= f.submit "Zaloguj się", 
                  class: "btn btn-primary btn-lg d-flex align-items-center justify-content-center",
                  data: { disable_with: "Logowanie..." } %>
            </div>
          <% end %>
        </div>
        
        <div class="card-footer bg-light py-3 border-top">
          <div class="text-center">
            <small class="text-muted d-flex align-items-center justify-content-center">
              <%= icon('shield-check', size: 'sm', css_class: 'me-1') %>
              Twoje dane logowania są bezpieczne
            </small>
          </div>
        </div>
      </div>

      <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-white py-3">
          <h6 class="mb-0 d-flex align-items-center">
            <%= icon('user-plus', size: 'sm', css_class: 'me-2 text-success') %>
            Nie masz jeszcze konta?
          </h6>
        </div>
        <div class="card-body">
          <p class="text-muted mb-3">
            Dołącz do naszej platformy edukacyjnej i odkryj wszystkie możliwości:
          </p>
          <ul class="list-unstyled small mb-3">
            <li class="mb-2 d-flex align-items-start">
              <%= icon('check', size: 'sm', css_class: 'me-2 text-success mt-1 flex-shrink-0') %>
              <span class="text-muted">Twórz i rozwiązuj quizy</span>
            </li>
            <li class="mb-2 d-flex align-items-start">
              <%= icon('check', size: 'sm', css_class: 'me-2 text-success mt-1 flex-shrink-0') %>
              <span class="text-muted">Dołącz do klas i kursów</span>
            </li>
            <li class="d-flex align-items-start">
              <%= icon('check', size: 'sm', css_class: 'me-2 text-success mt-1 flex-shrink-0') %>
              <span class="text-muted">Śledź swoje postępy w nauce</span>
            </li>
          </ul>
          
          <%= link_to new_registration_path(resource_name), class: "btn btn-success w-100 d-flex align-items-center justify-content-center" do %>
            <%= icon('user-plus', size: 'sm', css_class: 'me-2') %>
            Utwórz nowe konto
          <% end %>
        </div>
      </div>

      <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-white py-3">
          <h6 class="mb-0 d-flex align-items-center">
            <%= icon('key', size: 'sm', css_class: 'me-2 text-warning') %>
            Inne metody dostępu
          </h6>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <% if devise_mapping.recoverable? %>
              <%= link_to new_password_path(resource_name), class: "btn btn-outline-warning btn-sm d-flex align-items-center justify-content-center" do %>
                <%= icon('key', size: 'sm', css_class: 'me-2') %>
                Zapomniałem hasła
              <% end %>
            <% end %>
            
            <% if devise_mapping.confirmable? %>
              <%= link_to new_confirmation_path(resource_name), class: "btn btn-outline-info btn-sm d-flex align-items-center justify-content-center" do %>
                <%= icon('envelope', size: 'sm', css_class: 'me-2') %>
                Nie otrzymałem emaila
              <% end %>
            <% end %>
            
            <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && devise_mapping.unlockable? %>
              <%= link_to new_unlock_path(resource_name), class: "btn btn-outline-secondary btn-sm d-flex align-items-center justify-content-center" do %>
                <%= icon('lock-open', size: 'sm', css_class: 'me-2') %>
                Odblokuj konto
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>