<!-- app/views/devise/registrations/new.html.erb -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow">
        <div class="card-header bg-success text-white text-center">
          <h4 class="mb-0">
            <% if @invitation %>
              Rejestracja jako <%= @invitation.teacher? ? 'Nauczyciel' : 'Uczeń' %>
            <% else %>
              Rejestracja
            <% end %>
          </h4>
        </div>
        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            
            <!-- PRZEKAŻ TOKEN ZAPROSZENIA -->
            <% if @invitation_token %>
              <%= f.hidden_field :invitation_token, value: @invitation_token %>
              <div class="alert alert-info">
                <strong>Debug Info:</strong> 
                Token: <%= @invitation_token %>, 
                Invitation ID: <%= @invitation&.id %>
              </div>
            <% end %>

            <div class="row">
              <div class="col-md-6 mb-3">
                <%= f.label :first_name, "Imię", class: "form-label" %>
                <%= f.text_field :first_name, autofocus: true, class: "form-control", required: true %>
              </div>
              <div class="col-md-6 mb-3">
                <%= f.label :last_name, "Nazwisko", class: "form-label" %>
                <%= f.text_field :last_name, class: "form-control", required: true %>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :email, "Email", class: "form-label" %>
              <!-- PRE-FILL EMAIL Z ZAPROSZENIA -->
              <%= f.email_field :email, 
                  value: @invitation&.email || resource.email,
                  autocomplete: "email", 
                  class: "form-control", 
                  required: true,
                  readonly: @invitation.present? %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "Hasło", class: "form-label" %>
              <% if @minimum_password_length %>
                <small class="form-text text-muted">(minimum <%= @minimum_password_length %> znaków)</small>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, "Potwierdzenie hasła", class: "form-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
            </div>

            <div class="d-grid">
              <%= f.submit "Zarejestruj się", class: "btn btn-success btn-lg" %>
            </div>
          <% end %>

          <div class="mt-3 text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>