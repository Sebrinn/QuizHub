<%= render 'shared/icons' %>

<div class="container-fluid py-4">
  <div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8 col-md-10">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-4 border-bottom">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <%= icon('user-plus', size: 'xl', css_class: 'text-success') %>
            </div>
            <div class="flex-grow-1 ms-3">
              <h1 class="h4 mb-1 text-gray-800">
                <% if @invitation %>
                  Dołącz do platformy jako <%= @invitation.teacher? ? 'Nauczyciel' : 'Uczeń' %>
                <% else %>
                  Utwórz nowe konto
                <% end %>
              </h1>
              <p class="text-muted mb-0">
                <% if @invitation %>
                  Zostałeś zaproszony do <%= @invitation.teacher? ? 'nauczania' : 'nauki' %> na naszej platformie
                <% else %>
                  Dołącz do naszej społeczności edukacyjnej
                <% end %>
              </p>
            </div>
          </div>
        </div>
        
        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation" }, novalidate: true) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            
            <!-- Przekazanie tokenu zaproszenia -->
            <% if @invitation_token %>
              <%= f.hidden_field :invitation_token, value: @invitation_token %>
            <% end %>

            <!-- Informacja o zaproszeniu -->
            <% if @invitation %>
              <div class="alert alert-success d-flex align-items-center mb-4">
                <%= icon('envelope-open', size: 'lg', css_class: 'me-3 flex-shrink-0 text-success') %>
                <div class="flex-grow-1">
                  <small class="fw-medium">Masz aktywne zaproszenie!</small>
                  <div class="text-muted small mt-1">
                    <% if @invitation.teacher? %>
                      Zostaniesz zarejestrowany jako <strong>Nauczyciel</strong> z możliwością tworzenia kursów
                    <% else %>
                      Zostaniesz zarejestrowany jako <strong>Uczeń</strong> z dostępem do materiałów
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>

            <div class="row">
              <div class="col-md-6 mb-4">
                <%= f.label :first_name, class: "form-label fw-medium text-gray-700" do %>
                  <%= icon_with_text('user', 'Imię', size: 'sm') %>
                <% end %>
                <%= f.text_field :first_name, 
                    autofocus: true,
                    class: "form-control form-control-lg", 
                    placeholder: "Twoje imię",
                    required: true %>
              </div>
              <div class="col-md-6 mb-4">
                <%= f.label :last_name, class: "form-label fw-medium text-gray-700" do %>
                  <%= icon_with_text('user', 'Nazwisko', size: 'sm') %>
                <% end %>
                <%= f.text_field :last_name, 
                    class: "form-control form-control-lg", 
                    placeholder: "Twoje nazwisko",
                    required: true %>
              </div>
            </div>

            <div class="mb-4">
              <%= f.label :email, class: "form-label fw-medium text-gray-700" do %>
                <%= icon_with_text('at', 'Adres email', size: 'sm') %>
              <% end %>
              <%= f.email_field :email, 
                  value: @invitation&.email || resource.email,
                  autocomplete: "email", 
                  class: "form-control form-control-lg", 
                  placeholder: "twoj@email.com",
                  required: true,
                  readonly: @invitation.present? %>
              <% if @invitation.present? %>
                <div class="form-text text-muted">
                  Email został predefiniowany na podstawie zaproszenia
                </div>
              <% else %>
                <div class="form-text text-muted">
                  Na ten adres wyślemy link aktywacyjny do Twojego konta
                </div>
              <% end %>
            </div>

            <div class="mb-4">
              <%= f.label :password, class: "form-label fw-medium text-gray-700" do %>
                <%= icon_with_text('lock', 'Hasło', size: 'sm') %>
              <% end %>
              <%= f.password_field :password, 
                  autocomplete: "new-password", 
                  class: "form-control form-control-lg", 
                  placeholder: "Wpisz bezpieczne hasło",
                  required: true,
                  minlength: @minimum_password_length %>
              <div class="form-text text-muted">
                <% if @minimum_password_length %>
                  Hasło musi zawierać minimum <strong><%= @minimum_password_length %> znaków</strong>
                <% else %>
                  Wybierz silne, trudne do odgadnięcia hasło
                <% end %>
              </div>
            </div>

            <div class="mb-4">
              <%= f.label :password_confirmation, class: "form-label fw-medium text-gray-700" do %>
                <%= icon_with_text('lock-check', 'Potwierdzenie hasła', size: 'sm') %>
              <% end %>
              <%= f.password_field :password_confirmation, 
                  autocomplete: "new-password", 
                  class: "form-control form-control-lg", 
                  placeholder: "Powtórz hasło",
                  required: true %>
              <div class="form-text text-muted">
                Wprowadź ponownie hasło w celu weryfikacji
              </div>
            </div>

            <div class="d-grid mt-4 pt-3 border-top">
              <%= f.submit "Zarejestruj się", 
                  class: "btn btn-success btn-lg d-flex align-items-center justify-content-center",
                  data: { disable_with: "Tworzenie konta..." } %>
            </div>
          <% end %>

          <div class="mt-4 pt-3 border-top">
            <div class="text-center">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
        
        <div class="card-footer bg-light py-3 border-top">
          <div class="text-center">
            <small class="text-muted d-flex align-items-center justify-content-center">
              <%= icon('shield-check', size: 'sm', css_class: 'me-1') %>
              Twoje dane są bezpieczne i chronione
            </small>
          </div>
        </div>
      </div>

      <!-- Informacje o korzyściach -->
      <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-white py-3">
          <h6 class="mb-0 d-flex align-items-center">
            <%= icon('sparkles', size: 'sm', css_class: 'me-2 text-primary') %>
            Korzyści z posiadania konta
          </h6>
        </div>
        <div class="card-body">
          <div class="row text-center">
            <div class="col-md-4 mb-3">
              <div class="d-flex flex-column align-items-center">
                <div class="bg-primary bg-opacity-10 rounded-circle p-3 mb-2">
                  <%= icon('book-open', size: 'lg', css_class: 'text-primary') %>
                </div>
                <h6 class="text-gray-700 mb-1">Materiały edukacyjne</h6>
                <small class="text-muted">Dostęp do kursów i quizów</small>
              </div>
            </div>
            <div class="col-md-4 mb-3">
              <div class="d-flex flex-column align-items-center">
                <div class="bg-success bg-opacity-10 rounded-circle p-3 mb-2">
                  <%= icon('chart-bar', size: 'lg', css_class: 'text-success') %>
                </div>
                <h6 class="text-gray-700 mb-1">Śledzenie postępów</h6>
                <small class="text-muted">Monitoruj swoje wyniki i rozwój</small>
              </div>
            </div>
            <div class="col-md-4 mb-3">
              <div class="d-flex flex-column align-items-center">
                <div class="bg-info bg-opacity-10 rounded-circle p-3 mb-2">
                  <%= icon('users', size: 'lg', css_class: 'text-info') %>
                </div>
                <h6 class="text-gray-700 mb-1">Społeczność</h6>
                <small class="text-muted">Dołącz do klas i współpracuj</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>