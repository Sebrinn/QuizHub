<%= render 'shared/icons' %>

<div class="container-fluid py-4">
  <div class="row justify-content-center">
    <div class="col-xl-5 col-lg-6 col-md-8">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-4 border-bottom">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <%= icon('key', size: 'xl', css_class: 'text-info') %>
            </div>
            <div class="flex-grow-1 ms-3">
              <h1 class="h4 mb-1 text-gray-800">Ustaw nowe hasło</h1>
              <p class="text-muted mb-0">Wybierz nowe, bezpieczne hasło do swojego konta</p>
            </div>
          </div>
        </div>
        
        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "needs-validation" }, novalidate: true) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="alert alert-success d-flex align-items-center mb-4">
              <%= icon('check-circle', size: 'lg', css_class: 'me-3 flex-shrink-0 text-success') %>
              <div class="flex-grow-1">
                <small class="fw-medium">Link do resetowania hasła jest prawidłowy</small>
                <div class="text-muted small mt-1">
                  Możesz teraz ustawić nowe hasło do swojego konta.
                </div>
              </div>
            </div>

            <div class="mb-4">
              <%= f.label :password, class: "form-label fw-medium text-gray-700" do %>
                <%= icon_with_text('lock', 'Nowe hasło', size: 'sm') %>
              <% end %>
              <%= f.password_field :password, 
                  autofocus: true, 
                  autocomplete: "new-password", 
                  class: "form-control form-control-lg", 
                  placeholder: "Wpisz nowe hasło",
                  required: true,
                  minlength: @minimum_password_length %>
              <div class="form-text text-muted">
                <% if @minimum_password_length %>
                  Hasło musi zawierać minimum <strong><%= @minimum_password_length %> znaków</strong>
                <% else %>
                  Wybierz silne, trudne do odgadnięcia hasło
                <% end %>
              </div>
            </div>

            <div class="mb-4">
              <%= f.label :password_confirmation, class: "form-label fw-medium text-gray-700" do %>
                <%= icon_with_text('lock-check', 'Potwierdź nowe hasło', size: 'sm') %>
              <% end %>
              <%= f.password_field :password_confirmation, 
                  autocomplete: "new-password", 
                  class: "form-control form-control-lg", 
                  placeholder: "Powtórz nowe hasło",
                  required: true %>
              <div class="form-text text-muted">
                Wprowadź ponownie nowe hasło w celu weryfikacji
              </div>
            </div>

            <div class="d-grid mt-4 pt-3 border-top">
              <%= f.submit "Zmień hasło", 
                  class: "btn btn-info btn-lg d-flex align-items-center justify-content-center",
                  data: { disable_with: "Zapisywanie..." } %>
            </div>
          <% end %>

          <div class="mt-4 pt-3 border-top">
            <div class="text-center">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
        
        <div class="card-footer bg-light py-3 border-top">
          <div class="text-center">
            <small class="text-muted d-flex align-items-center justify-content-center">
              <%= icon('shield-check', size: 'sm', css_class: 'me-1') %>
              Twoje nowe hasło zostanie bezpiecznie zaszyfrowane
            </small>
          </div>
        </div>
      </div>

      <!-- Wskazówki dotyczące bezpiecznego hasła -->
      <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-white py-3">
          <h6 class="mb-0 d-flex align-items-center">
            <%= icon('lightbulb', size: 'sm', css_class: 'me-2 text-warning') %>
            Jak stworzyć bezpieczne hasło?
          </h6>
        </div>
        <div class="card-body">
          <ul class="list-unstyled small mb-0">
            <li class="mb-2 d-flex align-items-start">
              <%= icon('check', size: 'sm', css_class: 'me-2 text-success mt-1 flex-shrink-0') %>
              <span class="text-muted">Użyj <strong>co najmniej <%= @minimum_password_length %> znaków</strong></span>
            </li>
            <li class="mb-2 d-flex align-items-start">
              <%= icon('check', size: 'sm', css_class: 'me-2 text-success mt-1 flex-shrink-0') %>
              <span class="text-muted">Dodaj <strong>wielkie i małe litery</strong></span>
            </li>
            <li class="mb-2 d-flex align-items-start">
              <%= icon('check', size: 'sm', css_class: 'me-2 text-success mt-1 flex-shrink-0') %>
              <span class="text-muted">Włącz <strong>cyfry i znaki specjalne</strong></span>
            </li>
            <li class="d-flex align-items-start">
              <%= icon('check', size: 'sm', css_class: 'me-2 text-success mt-1 flex-shrink-0') %>
              <span class="text-muted">Unikaj <strong>osobistych informacji</strong></span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>