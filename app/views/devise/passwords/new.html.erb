<%= render 'shared/icons' %>

<div class="container-fluid py-4">
  <div class="row justify-content-center">
    <div class="col-xl-5 col-lg-6 col-md-8">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-4 border-bottom">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <%= icon('key', size: 'xl', css_class: 'text-warning') %>
            </div>
            <div class="flex-grow-1 ms-3">
              <h1 class="h4 mb-1 text-gray-800">Odzyskiwanie hasła</h1>
              <p class="text-muted mb-0">Wyślemy Ci instrukcje resetowania hasła</p>
            </div>
          </div>
        </div>
        
        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "needs-validation" }, novalidate: true) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="alert alert-warning d-flex align-items-center mb-4">
              <%= icon('info-circle', size: 'lg', css_class: 'me-3 flex-shrink-0 text-warning') %>
              <div class="flex-grow-1">
                <small class="fw-medium">Nie pamiętasz swojego hasła?</small>
                <div class="text-muted small mt-1">
                  Podaj swój adres email, a wyślemy Ci link do resetowania hasła.
                </div>
              </div>
            </div>

            <div class="mb-4">
              <%= f.label :email, class: "form-label fw-medium text-gray-700" do %>
                <%= icon_with_text('at', 'Adres email', size: 'sm') %>
              <% end %>
              <%= f.email_field :email, 
                  autofocus: true, 
                  autocomplete: "email", 
                  class: "form-control form-control-lg", 
                  placeholder: "twoj@email.com",
                  required: true %>
              <div class="form-text text-muted">
                Na ten adres wyślemy link do resetowania hasła
              </div>
            </div>

            <div class="d-grid mt-4 pt-3 border-top">
              <%= f.submit "Wyślij instrukcje resetowania", 
                  class: "btn btn-warning btn-lg d-flex align-items-center justify-content-center",
                  data: { disable_with: "Wysyłanie..." } %>
            </div>
          <% end %>

          <div class="mt-4 pt-3 border-top">
            <div class="text-center">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
        
        <div class="card-footer bg-light py-3 border-top">
          <div class="text-center">
            <small class="text-muted d-flex align-items-center justify-content-center">
              <%= icon('clock', size: 'sm', css_class: 'me-1') %>
              Link resetujący będzie ważny przez 6 godzin
            </small>
          </div>
        </div>
      </div>

      <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-white py-3">
          <h6 class="mb-0 d-flex align-items-center">
            <%= icon('question-circle', size: 'sm', css_class: 'me-2 text-info') %>
            Co się stanie dalej?
          </h6>
        </div>
        <div class="card-body">
          <div class="row text-center">
            <div class="col-md-4 mb-3">
              <div class="d-flex flex-column align-items-center">
                <div class="bg-warning bg-opacity-10 rounded-circle p-3 mb-2">
                  <%= icon('envelope', size: 'lg', css_class: 'text-warning') %>
                </div>
                <h6 class="text-gray-700 mb-1">Krok 1</h6>
                <small class="text-muted">Otrzymasz email z linkiem resetującym</small>
              </div>
            </div>
            <div class="col-md-4 mb-3">
              <div class="d-flex flex-column align-items-center">
                <div class="bg-info bg-opacity-10 rounded-circle p-3 mb-2">
                  <%= icon('cursor-click', size: 'lg', css_class: 'text-info') %>
                </div>
                <h6 class="text-gray-700 mb-1">Krok 2</h6>
                <small class="text-muted">Kliknij w link w wiadomości email</small>
              </div>
            </div>
            <div class="col-md-4 mb-3">
              <div class="d-flex flex-column align-items-center">
                <div class="bg-success bg-opacity-10 rounded-circle p-3 mb-2">
                  <%= icon('lock-check', size: 'lg', css_class: 'text-success') %>
                </div>
                <h6 class="text-gray-700 mb-1">Krok 3</h6>
                <small class="text-muted">Ustaw nowe hasło do konta</small>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-white py-3">
          <h6 class="mb-0 d-flex align-items-center">
            <%= icon('lightbulb', size: 'sm', css_class: 'me-2 text-warning') %>
            Przydatne wskazówki
          </h6>
        </div>
        <div class="card-body">
          <ul class="list-unstyled small mb-0">
            <li class="mb-2 d-flex align-items-start">
              <%= icon('check', size: 'sm', css_class: 'me-2 text-success mt-1 flex-shrink-0') %>
              <span class="text-muted">Sprawdź folder <strong>spam</strong> jeśli nie widzisz wiadomości</span>
            </li>
            <li class="mb-2 d-flex align-items-start">
              <%= icon('check', size: 'sm', css_class: 'me-2 text-success mt-1 flex-shrink-0') %>
              <span class="text-muted">Upewnij się, że wpisałeś <strong>poprawny adres email</strong></span>
            </li>
            <li class="d-flex align-items-start">
              <%= icon('check', size: 'sm', css_class: 'me-2 text-success mt-1 flex-shrink-0') %>
              <span class="text-muted">Link resetujący jest <strong>ważny przez 6 godzin</strong></span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>