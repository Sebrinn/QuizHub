<%= render 'shared/icons' %>

<div class="container-fluid py-4">
  <div class="row justify-content-center">
    <div class="col-xl-8 col-lg-10">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-4 border-bottom">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <%= icon('pencil', size: 'xl', css_class: 'text-primary') %>
            </div>
            <div class="flex-grow-1 ms-3">
              <h1 class="h4 mb-1 text-gray-800">Edytuj quiz</h1>
              <p class="text-muted mb-0">Klasa: <%= @classroom.name %></p>
            </div>
          </div>
        </div>
        
        <div class="card-body p-4">
          <%= form_with model: [@classroom, @quiz], local: true, class: "needs-validation", novalidate: true do |form| %>
            <% if @quiz.errors.any? %>
              <div class="alert alert-danger d-flex align-items-start mb-4">
                <%= icon('exclamation-triangle', size: 'lg', css_class: 'me-3 mt-1 flex-shrink-0 text-danger') %>
                <div class="flex-grow-1">
                  <h5 class="alert-heading">
                    <%= pluralize(@quiz.errors.count, "błąd") %> uniemożliwia zapisanie quizu:
                  </h5>
                  <ul class="mb-0">
                    <% @quiz.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            <% end %>

            <div class="mb-4">
              <%= form.label :title, class: "form-label fw-medium text-gray-700" do %>
                <%= icon_with_text('tag', 'Tytuł quizu', size: 'sm') %>
              <% end %>
              <%= form.text_field :title, 
                  class: "form-control form-control-lg", 
                  placeholder: "Wprowadź tytuł quizu...",
                  required: true,
                  autofocus: true %>
              <div class="form-text text-muted">
                Nadaj quizowi czytelny i opisowy tytuł
              </div>
            </div>

            <div class="mb-4">
              <%= form.label :description, class: "form-label fw-medium text-gray-700" do %>
                <%= icon_with_text('document-text', 'Opis quizu', size: 'sm') %>
              <% end %>
              <%= form.text_area :description, 
                  class: "form-control", 
                  rows: 4,
                  placeholder: "Opisz czego dotyczy quiz, jaki materiał obejmuje..." %>
              <div class="form-text text-muted">
                Opcjonalny opis pomagający uczniom zrozumieć zakres quizu
              </div>
            </div>
            
            <div class="border-top pt-4 mt-4">
              <h5 class="text-gray-700 mb-3 d-flex align-items-center">
                <%= icon('clock', size: 'sm', css_class: 'me-2 text-warning') %>
                Harmonogram dostępności
              </h5>
              
              <div class="row g-3">
                <div class="col-md-6">
                  <%= form.label :start_time, class: "form-label fw-medium text-gray-700" do %>
                    <%= icon_with_text('play', 'Czas rozpoczęcia', size: 'sm') %>
                  <% end %>
                  <%= form.datetime_local_field :start_time, class: "form-control" %>
                  <div class="form-text text-muted">
                    Kiedy quiz stanie się dostępny dla uczniów
                  </div>
                </div>
                <div class="col-md-6">
                  <%= form.label :end_time, class: "form-label fw-medium text-gray-700" do %>
                    <%= icon_with_text('stop', 'Czas zakończenia', size: 'sm') %>
                  <% end %>
                  <%= form.datetime_local_field :end_time, class: "form-control" %>
                  <div class="form-text text-muted">
                    Kiedy quiz przestanie być dostępny
                  </div>
                </div>
              </div>
            </div>

            <div class="border-top pt-4 mt-4">
              <h5 class="text-gray-700 mb-3 d-flex align-items-center">
                <%= icon('hourglass', size: 'sm', css_class: 'me-2 text-info') %>
                Ustawienia czasu
              </h5>
              
              <div class="mb-4">
                <%= form.label :time_limit, class: "form-label fw-medium text-gray-700" do %>
                  <%= icon_with_text('timer', 'Limit czasu (minuty)', size: 'sm') %>
                <% end %>
                <%= form.number_field :time_limit, 
                    class: "form-control", 
                    min: 0, 
                    max: 300,
                    placeholder: "0",
                    value: form.object.time_limit || 0 %>
                <div class="form-text text-muted">
                  Czas na rozwiązanie całego quizu. <strong>0 oznacza brak limitu czasu.</strong>
                </div>
              </div>
            </div>

            <div class="border-top pt-4 mt-4">
              <h5 class="text-gray-700 mb-3 d-flex align-items-center">
                <%= icon('cog', size: 'sm', css_class: 'me-2 text-secondary') %>
                Dodatkowe ustawienia
              </h5>
              
              <div class="mb-3">
                <div class="form-check">
                  <%= form.check_box :shuffle_questions, class: "form-check-input" %>
                  <%= form.label :shuffle_questions, class: "form-check-label text-gray-700 d-flex align-items-center" do %>
                    <%= icon('shuffle', size: 'sm', css_class: 'me-2 text-primary') %>
                    Losowa kolejność pytań
                  <% end %>
                </div>
                <div class="form-text text-muted ms-4">
                  Każdy uczeń otrzyma pytania w losowej kolejności
                </div>
              </div>

              <div class="mb-3">
                <div class="form-check">
                  <%= form.check_box :active, class: "form-check-input" %>
                  <%= form.label :active, class: "form-check-label text-gray-700 d-flex align-items-center" do %>
                    <%= icon('eye', size: 'sm', css_class: 'me-2 text-success') %>
                    Aktywny quiz
                  <% end %>
                </div>
                <div class="form-text text-muted ms-4">
                  Quiz będzie widoczny i dostępny dla uczniów
                </div>
              </div>
            </div>

            <div class="d-flex gap-3 mt-4 pt-4 border-top">
              <%= form.submit "Zapisz zmiany", 
                  class: "btn btn-primary btn-lg flex-fill d-flex align-items-center justify-content-center",
                  data: { disable_with: "Zapisywanie..." } %>
              
              <%= link_to classroom_quiz_path(@classroom, @quiz), 
                    class: "btn btn-outline-secondary flex-fill d-flex align-items-center justify-content-center" do %>
                <%= icon('arrow-left', size: 'sm', css_class: 'me-2') %>
                Anuluj
              <% end %>

              <%= link_to classroom_quiz_path(@classroom, @quiz), 
                    class: "btn btn-outline-info flex-fill d-flex align-items-center justify-content-center" do %>
                <%= icon('eye', size: 'sm', css_class: 'me-2') %>
                Podgląd quizu
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-white py-3">
          <h6 class="mb-0 d-flex align-items-center">
            <%= icon('chart-bar', size: 'sm', css_class: 'me-2 text-info') %>
            Statystyki quizu
          </h6>
        </div>
        <div class="card-body">
          <div class="row text-center">
            <div class="col-md-4 mb-3">
              <div class="d-flex flex-column align-items-center">
                <div class="bg-primary bg-opacity-10 rounded-circle p-3 mb-2">
                  <%= icon('question-mark-circle', size: 'lg', css_class: 'text-primary') %>
                </div>
                <h4 class="text-gray-800 mb-1"><%= @quiz.questions.count %></h4>
                <small class="text-muted">Liczba pytań</small>
              </div>
            </div>
            <div class="col-md-4 mb-3">
              <div class="d-flex flex-column align-items-center">
                <div class="bg-warning bg-opacity-10 rounded-circle p-3 mb-2">
                  <%= icon('clock', size: 'lg', css_class: 'text-warning') %>
                </div>
                <h4 class="text-gray-800 mb-1"><%= @quiz.time_limit || 0 %></h4>
                <small class="text-muted">Limit czasu (min)</small>
              </div>
            </div>
            <div class="col-md-4 mb-3">
              <div class="d-flex flex-column align-items-center">
                <div class="bg-<%= @quiz.active? ? 'success' : 'secondary' %> bg-opacity-10 rounded-circle p-3 mb-2">
                  <%= icon(@quiz.active? ? 'eye' : 'eye-off', size: 'lg', css_class: "text-#{@quiz.active? ? 'success' : 'secondary'}") %>
                </div>
                <h4 class="text-gray-800 mb-1"><%= @quiz.active? ? 'Tak' : 'Nie' %></h4>
                <small class="text-muted">Status aktywności</small>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-white py-3">
          <h6 class="mb-0 d-flex align-items-center">
            <%= icon('lightning-bolt', size: 'sm', css_class: 'me-2 text-warning') %>
            Szybkie akcje
          </h6>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2 d-md-flex">
            <%= link_to new_classroom_quiz_question_path(@classroom, @quiz), 
                  class: "btn btn-success btn-sm d-flex align-items-center me-2" do %>
              <%= icon('plus', size: 'sm', css_class: 'me-2') %>
              Dodaj pytanie
            <% end %>

            <%= link_to new_classroom_quiz_ai_questions_path(@classroom, @quiz), 
                  class: "btn btn-info btn-sm d-flex align-items-center me-2" do %>
              <%= icon('robot', size: 'sm', css_class: 'me-2') %>
              Generuj pytania AI
            <% end %>

            <% if policy(@quiz).activate? || policy(@quiz).deactivate? %>
              <% if @quiz.active? %>
                <%= button_to deactivate_classroom_quiz_path(@classroom, @quiz), 
                      method: :patch,
                      class: "btn btn-warning btn-sm d-flex align-items-center me-2",
                      data: { turbo_confirm: "Czy na pewno chcesz deaktywować ten quiz?" } do %>
                  <%= icon('eye-off', size: 'sm', css_class: 'me-2') %>
                  Deaktywuj
                <% end %>
              <% else %>
                <%= button_to activate_classroom_quiz_path(@classroom, @quiz), 
                      method: :patch,
                      class: "btn btn-success btn-sm d-flex align-items-center me-2",
                      data: { turbo_confirm: "Czy na pewno chcesz aktywować ten quiz?" } do %>
                  <%= icon('eye', size: 'sm', css_class: 'me-2') %>
                  Aktywuj
                <% end %>
              <% end %>
            <% end %>

            <% if policy(@quiz).results? %>
              <%= link_to results_classroom_quiz_path(@classroom, @quiz), 
                    class: "btn btn-primary btn-sm d-flex align-items-center" do %>
                <%= icon('chart-bar', size: 'sm', css_class: 'me-2') %>
                Wyniki
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-white py-3">
          <h6 class="mb-0 d-flex align-items-center">
            <%= icon('information-circle', size: 'sm', css_class: 'me-2 text-info') %>
            Informacje o quizie
          </h6>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <dl class="row small mb-0">
                <dt class="col-sm-5 text-gray-600">Utworzono:</dt>
                <dd class="col-sm-7"><%= @quiz.created_at.strftime("%d.%m.%Y %H:%M") %></dd>
                
                <dt class="col-sm-5 text-gray-600">Ostatnia aktualizacja:</dt>
                <dd class="col-sm-7"><%= @quiz.updated_at.strftime("%d.%m.%Y %H:%M") %></dd>
              </dl>
            </div>
            <div class="col-md-6">
              <dl class="row small mb-0">
                <dt class="col-sm-5 text-gray-600">Typy pytań:</dt>
                <dd class="col-sm-7">
                  <% if @quiz.questions.any? %>
                    <% question_types = @quiz.questions.group(:question_type).count %>
                    <% question_types.each do |type, count| %>
                      <span class="badge bg-primary-subtle text-primary me-1">
                        <%= type.humanize %>: <%= count %>
                      </span>
                    <% end %>
                  <% else %>
                    <span class="text-muted">Brak pytań</span>
                  <% end %>
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>